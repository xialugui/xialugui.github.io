getdir() {
    for element in $(ls $1); do
        dir_or_file=$1"/"$element
        if [ -d $dir_or_file ]; then
            getdir $dir_or_file
        else
            if [[ $dir_or_file =~ \.typ$ ]]; then
                typlite $dir_or_file || echo "转换 $dir_or_file 失败"

                echo "转换 $dir_or_file 成功"
                git add ${dir_or_file%.*}.md
            fi
        fi
    done
}
getdir "$PWD/docs/zh"
